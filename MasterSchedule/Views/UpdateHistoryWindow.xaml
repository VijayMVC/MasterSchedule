<Window x:Class="MasterSchedule.Views.UpdateHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Master-Schedule - Update History" Height="400" Width="580" FontSize="15" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" FontFamily="Arial" Loaded="Window_Loaded" >
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Width="30" Height="30" Source="/logo.ico"/>
            <TextBlock Grid.Column="1" Text="Update Information" FontSize="17" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1" Margin="30,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtUpdateInformation"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
